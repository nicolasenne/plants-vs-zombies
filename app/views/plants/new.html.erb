<div class="container-new">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2>Create a new plant</h2>

      <%= simple_form_for @plant do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :quantity %>
        <%= f.input :price %>
        <%= f.input :photo, as: :file %>
        <%= f.input :address %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
