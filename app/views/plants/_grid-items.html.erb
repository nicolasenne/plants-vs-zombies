<div class="container">

  <div class="grid">
  <% @plants.each do |plant| %>
    <div class="grid-item">
      <div class="card">

        <%= cl_image_tag plant.photo.key, class: "card-img" if plant.photo.attached? %>

        <div class="card-content">

          <h1 class="card-head"> <%= plant.name %></h1>
          <p class="card-text"><%= plant.description %></p>
          <%= link_to "Explore", plant_path(plant), class: 'btn card-btn' %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>

